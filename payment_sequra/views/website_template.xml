<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="payment_inherit" inherit_id="website_sale.payment">
            <xpath expr="//div[hasclass('container', 'oe_website_sale')]" position="inside">
                <t t-raw="0"/>
            </xpath>
        </template>

        <template id="payment" name="Payment Sequra">
            <t t-set="website_sale_order" t-value="website.sale_get_order()" />
            <t t-call="website_sale.payment">
                <div t-raw="iframe" />
                <script type="text/javascript">
                    (function(){
                      window.SequraFormInstance.show();
                    })();
                </script>
            </t>
        </template>

        <template id="500">
            <t t-call="website.layout">
              <div id="wrap">
                <div class="container">
                    <h1 class="mt32">Error found!</h1>
                    <p class="alert alert-danger" t-if="error">
                        <t t-esc="error"/>
                    </p>
                </div>
              </div>
            </t>
        </template>
    </data>
</odoo>